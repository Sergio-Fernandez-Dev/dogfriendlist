{
    "require": {
        "phpunit/phpunit": "^9.5",
        "vlucas/phpdotenv": "^5.3"
    },

    "autoload": {
        "files": [
            "app/core/helpers/helpers.php",
            "config/global.php"
        ],

        "psr-4": {
            "App\\": "app/", 
            "Exceptions\\": "exceptions/",
            "ORM\\": "libs/orm/"
        }      
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "config": {
        "optimize-autoloader": true
    }

    
}
