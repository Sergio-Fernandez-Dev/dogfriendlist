{
    "require": {
        "phpunit/phpunit": "^9.5",
        "vlucas/phpdotenv": "^5.3",
        "phpmailer/phpmailer": "^6.5",
        "heroku/heroku-buildpack-php": "^205.0"
    },

    "autoload": {
        "files": [
            "app/Core/helpers/helpers.php",
            "config/global.php"
        ],

        "psr-4": {
            "App\\": "app/", 
            "Exceptions\\": "exceptions/"
        }      
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "config": {
        "optimize-autoloader": true
    }

    
}
